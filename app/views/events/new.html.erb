<div class ="col-md-4 col-md-offset-4">
  <div class ="form_border">
    <h2 class ="text-center">Add New Event</h2>
    <%= form_for Event.new, :url => events_path do |f| %>
    <% if @event.errors.any? %>
     <div id="error_explanation">
       <div class="alert alert-danger">
        <ul>
          <% @event.errors.full_messages.each do |msg| %>
            <li> <%= msg %></li>
          <% end %>
        </ul>
       </div> 
     </div>
     <% end %>
      <div class="form_group">
        <%= f.label :name %><br />
        <%= f.text_field :name, autofocus: true, :class => "form-control" %>
      </div><br />
      <div class="form-group">
        <%= f.label :event_start_date %><br />
        <%= f.text_field :event_start_date, :class => "form-control datepicker"  %>
      </div>
      <div class="form-group">
        <%= f.label :event_finish_date %><br />
        <%= f.text_field :event_finish_date, :class => "form-control datepicker" %>
      </div>
      <div class="form-group">
        <%= f.label :avatar %><br />
        <%= f.file_field :avatar%>
      </div>
      <div class="actions">
        <%= f.submit "Create Event", :class=> "btn btn-info form-control" %>
      </div>
    <% end %>
  </div>
</div>

<script type="text/javascript">
  $(document).ready(function(){
    $('.datepicker').datepicker();
  });
</script>